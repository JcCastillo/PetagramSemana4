<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jccl.petagram.fragment.perfilFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigthMascotaPerfil"
        android:padding="@dimen/tablerow_padding"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meal_image_order"
            android:layout_width="@dimen/heigthMascota"
            android:layout_height="@dimen/heigthMascota"
            android:src="@drawable/dog10"
            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorBlanco"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="@string/Mascota"
            android:layout_below="@id/meal_image_order"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMascotaPerfil"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
